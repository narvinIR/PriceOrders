{
  "name": "priceorders-bot",
  "description": "Telegram bot for B2B SKU matching",
  "build": {
    "type": "dockerfile",
    "dockerfilePath": "./Dockerfile"
  },
  "runtime": {
    "port": 8000,
    "command": "python -m bot.main",
    "healthCheck": {
      "path": "/health",
      "interval": 30,
      "timeout": 10,
      "unhealthyThreshold": 3
    }
  },
  "resources": {
    "cpu": "0.25",
    "memory": "512Mi",
    "replicas": 1
  },
  "deployment": {
    "restartPolicy": "OnFailure",
    "maxRetries": 3
  }
}
